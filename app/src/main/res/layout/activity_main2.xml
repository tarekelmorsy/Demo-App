<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:paddingEnd="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/tvLabelWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/family_semi_round_bold"
        android:includeFontPadding="false"
        android:text="ادخل البيانات المطلوبة"
        android:textColor="@color/black"
        android:textColorHighlight="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvLabelWelcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        android:drawablePadding="10dp"
        android:fontFamily="@font/family_semi_round_medium"
        android:text="من فضلك ادخل الرقم القومي"
        android:textColor="@color/brown_grey"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/id_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/very_light_pink_28dp_round_strok"
        android:fontFamily="@font/family_semi_round_medium"
        android:hint=" الرقم القومي"
        android:imeOptions="actionDone"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:textColorHint="@color/greyish_two"
        android:textDirection="rtl"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        android:drawablePadding="10dp"
        android:fontFamily="@font/family_semi_round_medium"
        android:text="من فضلك ادخل اسم المؤسسة  "
        android:textColor="@color/brown_grey"
        android:textSize="13sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/organizations_til"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/family_semi_round_medium"
        android:textColor="@color/black"
        android:textColorHint="@color/greyish_two"
        app:startIconDrawable="@drawable/ic_baseline_search_24">

        <AutoCompleteTextView
            android:id="@+id/organizations_ot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/very_light_pink_28dp_round_strok"
            android:fontFamily="@font/family_semi_round_medium"
            android:hint="المؤسسة"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/greyish_two"
            android:textDirection="rtl"
            android:textSize="17sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/family_semi_round_medium"
        android:text="التالي"
        android:textColor="@color/white"
        app:backgroundTint="?attr/colorControlActivated" />


</LinearLayout>