<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/start_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    tools:context=".IdNumberActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:fontFamily="@font/family_semi_round_bold"
        android:includeFontPadding="false"
        android:text="خ د \n د و ر ك "
        android:textColor="@color/purple_700"
        android:textColorHighlight="@color/white"
        android:textSize="24sp" />


    <TextView
        android:layout_marginTop="70dp"
        android:id="@+id/tvLabelWelcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/appbar_padding_top"
        android:drawablePadding="10dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/family_semi_round_medium"
        android:text="من فضلك ادخل الرقم القومي"
        android:textColor="@color/brown_grey"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/id_ed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/very_light_pink_28dp_round_strok"
        android:fontFamily="@font/family_semi_round_medium"
        android:hint=" الرقم القومي"
        android:layout_marginTop="20dp"
        android:imeOptions="actionDone"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:textColorHint="@color/greyish_two"
        android:textDirection="rtl"
        android:textSize="17sp" />



    <Button
        android:id="@+id/next2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/family_semi_round_medium"
        android:text="التالي"
        android:textColor="@color/white"
        app:backgroundTint="?attr/colorControlActivated" />


</LinearLayout>

